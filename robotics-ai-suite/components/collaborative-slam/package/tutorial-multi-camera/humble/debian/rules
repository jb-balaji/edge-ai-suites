#!/usr/bin/make -f

INSTALL_DIR=opt/ros/humble/share/collab-slam

override_dh_fixperms:
	dh_fixperms

%:
	dh $@

override_dh_auto_install:
	install -d $(CURDIR)/debian/ros-humble-cslam-tutorial-multi-camera/$(INSTALL_DIR)/tutorial-multi-camera
	install -m 0755 $(CURDIR)/scripts/cslam-multi-camera.sh $(CURDIR)/debian/ros-humble-cslam-tutorial-multi-camera/$(INSTALL_DIR)/tutorial-multi-camera
	install -m 0755 $(CURDIR)/scripts/traj_compare.py $(CURDIR)/debian/ros-humble-cslam-tutorial-multi-camera/$(INSTALL_DIR)/tutorial-multi-camera
	install -m 0755 $(CURDIR)/scripts/play_rosbag_ros2.py $(CURDIR)/debian/ros-humble-cslam-tutorial-multi-camera/$(INSTALL_DIR)/tutorial-multi-camera
	install -m 0644 config/ukf_config_two_camera.yaml $(CURDIR)/debian/ros-humble-cslam-tutorial-multi-camera/$(INSTALL_DIR)/tutorial-multi-camera
	dh_auto_install --
